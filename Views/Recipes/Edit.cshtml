@model CulinaryAdventures.Models.Recipe
@{ ViewData["Title"] = "Edit Recipe"; }

<h2>Edit Recipe</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required>
    </div>
    <div class="col-md-6">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" required>
    </div>
    <div class="col-md-4">
        <label asp-for="PrepTimeMin" class="form-label"></label>
        <input asp-for="PrepTimeMin" class="form-control" required>
    </div>
    <div class="col-md-4">
        <label asp-for="Servings" class="form-label"></label>
        <input asp-for="Servings" class="form-control" required>
    </div>
    <div class="col-md-4">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="Ingredients" class="form-label"></label>
        <textarea asp-for="Ingredients" class="form-control" rows="4" required></textarea>
    </div>
    <div class="col-12">
        <label asp-for="Instructions" class="form-label"></label>
        <textarea asp-for="Instructions" class="form-control" rows="6" required></textarea>
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Save Changes</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>