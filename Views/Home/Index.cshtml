@model IEnumerable<CulinaryAdventures.Models.Recipe>
@{
    ViewData["Title"] = "Culinary Adventures – South African Recipes";
}

<div class="text-center mb-4">
    <h1 class="display-4">Culinary Adventures</h1>
    <p class="lead">Authentic South-African recipes shared by a community of food lovers.</p>
</div>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto">
        <select name="category" class="form-select" asp-items="@(new SelectList(ViewBag.Categories))">
            <option value="">-- All Categories --</option>
        </select>
    </div>
    <div class="col-auto">
        <select name="sort" class="form-select">
            <option value="name">Sort by Name</option>
            <option value="time">Prep Time ↑</option>
            <option value="rating">Rating ↓</option>
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">Filter</button>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var r in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@r.ImageUrl" class="card-img-top" alt="@r.Title" style="height:200px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@r.Title</h5>
                    <p class="text-muted">@r.Category · ⏱ @r.PrepTimeMin min</p>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <partial name="_StarRatingPartial" model="r.AverageRating" />
                        <span class="badge bg-secondary">@r.Reviews.Count reviews</span>
                    </div>
                    <a asp-controller="Recipes" asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-primary btn-sm mt-2">View Recipe</a>
                </div>
            </div>
        </div>
    }
</div>